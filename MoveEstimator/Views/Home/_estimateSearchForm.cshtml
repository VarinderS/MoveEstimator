@model MoveEstimator.Models.EstimateViewModel

@using (Html.BeginForm( "Index", "Home", FormMethod.Get ))
{
	<table>
		<tr>
			<td>@Html.DropDownListFor(model => model.FromLocationId, new SelectList(Model.Locations, "Id", "Name", Model.FromLocationId), "From Location")</td>
			<td>@Html.DropDownListFor(model => model.ToLocationId, new SelectList(Model.Locations, "Id", "Name", Model.ToLocationId), "To Location")</td>
			<td>@Html.EditorFor(model => model.SmallMove)</td>
			<td>@Html.EditorFor(model => model.MediumMove)</td>
			<td>@Html.EditorFor(model => model.LargeMove)</td>
			<td>@Html.HiddenFor( model => model.EstimateId )<input type="submit" value="search" /></td>
		</tr>
	</table>
}